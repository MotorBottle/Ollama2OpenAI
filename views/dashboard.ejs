<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Ollama2OpenAI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            height: 100vh;
            background-color: #343a40;
            position: fixed;
            width: 250px;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .nav-link {
            color: #adb5bd;
        }
        .nav-link:hover, .nav-link.active {
            color: #fff;
            background-color: #495057;
        }
        .nav-link i {
            font-size: 16px;
            width: 16px;
            text-align: center;
        }
        .card {
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .stat-card {
            background: linear-gradient(45deg, #007bff, #0056b3);
            color: white;
        }
        .json-editor {
            font-family: 'Courier New', monospace;
            height: 200px;
        }
        .sidebar .mt-auto {
            /* margin-top: 1rem !important; */
            padding: 0.75rem 1rem 0 1rem;
            border-top: 1px solid #495057;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="p-3">
            <h5 class="text-white">Ollama2OpenAI</h5>
            <small class="text-muted">Admin Panel</small>
        </div>
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="#" data-section="overview">
                    <i class="fas fa-tachometer-alt me-2"></i> Overview
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-section="settings">
                    <i class="fas fa-cog me-2"></i> Settings
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-section="api-keys">
                    <i class="fas fa-key me-2"></i> API Keys
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-section="models">
                    <i class="fas fa-list me-2"></i> Models
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-section="logs">
                    <i class="fas fa-file-alt me-2"></i> Usage Logs
                </a>
            </li>
            <li class="nav-item mt-auto">
                <form method="POST" action="/logout" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm w-100">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Overview Section -->
        <div id="overview-section" class="content-section">
            <h2>Dashboard Overview</h2>
            <div class="row">
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body text-center">
                            <i class="fas fa-key fa-2x mb-2"></i>
                            <h4 id="total-keys">0</h4>
                            <small>Active API Keys</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body text-center">
                            <i class="fas fa-robot fa-2x mb-2"></i>
                            <h4 id="total-models">0</h4>
                            <small>Available Models</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body text-center">
                            <i class="fas fa-chart-line fa-2x mb-2"></i>
                            <h4 id="total-requests">0</h4>
                            <small>Total Requests</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body text-center">
                            <i class="fas fa-server fa-2x mb-2"></i>
                            <h4 id="ollama-status">Unknown</h4>
                            <small>Ollama Status</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Token Usage Statistics -->
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body text-center">
                            <i class="fas fa-coins fa-2x mb-2"></i>
                            <h4 id="total-tokens">0</h4>
                            <small>Total Tokens</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body text-center">
                            <i class="fas fa-arrow-right fa-2x mb-2"></i>
                            <h4 id="prompt-tokens">0</h4>
                            <small>Prompt Tokens</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body text-center">
                            <i class="fas fa-arrow-left fa-2x mb-2"></i>
                            <h4 id="completion-tokens">0</h4>
                            <small>Completion Tokens</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-body text-center">
                            <i class="fas fa-calculator fa-2x mb-2"></i>
                            <h4 id="avg-tokens">0</h4>
                            <small>Avg. Tokens/Request</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Settings Section -->
        <div id="settings-section" class="content-section" style="display:none;">
            <h2>Settings</h2>
            <div class="card">
                <div class="card-body">
                    <form id="settings-form">
                        <div class="mb-3">
                            <label for="ollama-url" class="form-label">Ollama API URL</label>
                            <input type="url" class="form-control" id="ollama-url" name="ollama-url" placeholder="http://localhost:11434">
                        </div>
                        <div class="mb-3">
                            <label for="admin-password" class="form-label">Admin Password</label>
                            <input type="password" class="form-control" id="admin-password" name="admin-password" placeholder="Leave empty to keep current">
                        </div>
                        <button type="submit" class="btn btn-primary">Save Settings</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- API Keys Section -->
        <div id="api-keys-section" class="content-section" style="display:none;">
            <h2>API Key Management</h2>
            <div class="card">
                <div class="card-header">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addKeyModal">
                        <i class="fas fa-plus"></i> Add API Key
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="api-keys-table">
                            <thead>
                                <tr>
                                    <th>Key Name</th>
                                    <th>Key (partial)</th>
                                    <th>Allowed Models</th>
                                    <th>Usage Count</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- API keys will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Models Section -->
        <div id="models-section" class="content-section" style="display:none;">
            <h2>Model Configuration</h2>
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <button type="button" class="btn btn-success" onclick="refreshModels()">
                            <i class="fas fa-sync"></i> Refresh from Ollama
                        </button>
                    </div>
                    
                    <!-- Parameter Overrides Example -->
                    <div class="alert alert-info mb-3">
                        <h6><i class="fas fa-info-circle"></i> Parameter Overrides Examples (Ollama Format):</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Basic Settings:</strong>
                                <pre class="mb-2"><code>{
  "temperature": 0.7,
  "num_ctx": 8192,
  "num_predict": 1000
}</code></pre>
                            </div>
                            <div class="col-md-6">
                                <strong>Reasoning Model:</strong>
                                <pre class="mb-2"><code>{
  "think": "high",
  "temperature": 0.8,
  "num_ctx": 32768
}</code></pre>
                            </div>
                        </div>
                        <small class="text-muted">
                            <strong>Important:</strong> Use <strong>Ollama parameter names only</strong>:
                            <br>• <code>num_predict</code> (not <code>max_tokens</code>), <code>num_ctx</code>, <code>temperature</code>, etc.
                            <br>• <code>think</code> parameter: <code>true</code>/<code>false</code> or effort levels <code>"low"</code>/<code>"medium"</code>/<code>"high"</code>
                            <br>• Set <code>exclude_reasoning</code> to <code>true</code> in override panel or request if you want to hide reasoning content;
                            <br>• <code>request_timeout</code> / <code>timeout_ms</code>: override Ollama call timeout in milliseconds (use <code>0</code> = no timeout)
                            <br>• These are model defaults - user API params will override these settings
                            <br><strong>Precedence:</strong> User API params → Model overrides → System defaults
                        </small>
                    </div>
                    <div class="table-responsive">
                        <table class="table" id="models-table">
                            <thead>
                                <tr>
                                    <th>Ollama Model</th>
                                    <th>Display Name</th>
                                    <th>Parameter Overrides</th>
                                    <th>Enabled</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Models will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <!-- Logs Section -->
        <div id="logs-section" class="content-section" style="display:none;">
            <h2>Usage Logs</h2>
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <select class="form-select" id="log-filter-key">
                                <option value="">All API Keys</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="log-filter-model">
                                <option value="">All Models</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="date" class="form-control" id="log-filter-date">
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-secondary" onclick="filterLogs()">Filter</button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm" id="logs-table">
                            <thead>
                                <tr>
                                    <th>Timestamp</th>
                                    <th>API Key</th>
                                    <th>Model</th>
                                    <th>Prompt Tokens</th>
                                    <th>Completion Tokens</th>
                                    <th>Total Tokens</th>
                                    <th>Response Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Logs will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add API Key Modal -->
    <div class="modal fade" id="addKeyModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add API Key</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="add-key-form">
                        <div class="mb-3">
                            <label for="key-name" class="form-label">Key Name</label>
                            <input type="text" class="form-control" id="key-name" required>
                        </div>
                        <div class="mb-3">
                            <label for="allowed-models" class="form-label">Allowed Models (comma separated, or * for all)</label>
                            <input type="text" class="form-control" id="allowed-models" value="*">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="addApiKey()">Create Key</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>
